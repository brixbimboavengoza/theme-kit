{
  "compilerOptions": {
    "target": "es5",                           
    "module": "commonjs",      
    "jsx": "react",                
    "lib": ["dom", "es2015", "es2016", "es2017"], 
    "declaration": true,                       
    "outDir": "./dist",                        
    "strict": true,                            
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true   
  },
  "include": ["src/**/*"],                     
  "exclude": ["node_modules", "dist"]          
}
